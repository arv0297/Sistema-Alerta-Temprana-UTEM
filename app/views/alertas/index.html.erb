<h1>Alertas</h1>


<Table class="table">
  <tr>
    <thead class="thead-dark">
   	<th> Prioridad</th>
	  <th> Fecha </th>
    <th> Opciones </th>
  </thead>
  </tr>

	<% @alertas.each do |t| %>
  
    <% if t.prioridad=='Alta' %>
  <tr>
  
  <td class="bg-danger text-light"><%= t.prioridad %></td>
  <td class="bg-danger text-light"><%= t.created_at.strftime("%d-%m-%Y = Hora: %H:%M:%S") %></td>
	<td class="bg-danger text-light">
	</td>
  
  </tr>
  <%end%>
  <% if t.prioridad=='Media' %>
  <tr>

  
  <td class="bg-warning text-dark"><%= t.prioridad %></td>
  <td class="bg-warning text-dark"><%= t.created_at.strftime("%d-%m-%Y = Hora: %H:%M:%S") %></td>
	<td class="bg-warning text-dark">
	</td>
 
  </tr>
  <%end%>

  <% if t.prioridad=='Baja' %>
  <tr>
  <td class="bg-info text-dark"><%= t.prioridad %></td>
  <td class="bg-info text-dark"><%= t.created_at.strftime("%d-%m-%Y = Hora: %H:%M:%S") %></td>
	<td class="bg-info text-dark">
	</td>
 
  </tr>
  <%end%>


 

<%end%>
</table>
