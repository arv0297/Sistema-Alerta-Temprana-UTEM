    </div>

    <% if current_user.rol.descripcion=='Administrador'%>
    <button onclick="myFunction('Demo2')" class="w3-button w3-block w3-black w3-left-align"><i class="fa fa-group"></i> Profesionales</button>
    <div id="Demo2" class="w3-hide w3-animate-zoom">
      <a href="/users" class="w3-button w3-block w3-left-align">Ver profesionales</a>
      <a href="/users/new" class="w3-button w3-block w3-left-align">Agregar profesional</a>
    </div>
    <%end%>

    <button onclick="myFunction('Demo3')" class="w3-button w3-block w3-black w3-left-align"><i class="fa fa-line-chart"></i> Informes</button>
    <div id="Demo3" class="w3-hide w3-animate-zoom">
      <a href="/informes" class="w3-button w3-block w3-left-align">Ver informes</a>
      <a href="/informes/new" class="w3-button w3-block w3-left-align">Crear informe</a>
