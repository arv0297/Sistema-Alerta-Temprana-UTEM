      <a href="#" class="w3-button w3-block w3-left-align">Ver alertas</a>
    </div>

    <% if current_user.rol.descripcion=='Administrador'%>
    <button onclick="myFunction('Demo4')" class="w3-button w3-block w3-black w3-left-align"><i class="fa fa-institution"></i> Administrar</button>
    <div id="Demo4" class="w3-hide w3-animate-zoom">
