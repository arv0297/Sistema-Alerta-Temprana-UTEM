<h1>Carreras </h1>


<button type="button" class="btn btn-info" data-toggle="modal" data-target="#exampleModalLong">
  Agregar Carrera
</button>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Agregar Carrera</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        
      <%=form_for(@carreras) do |f| %>

        <div class="form-group">
          <label for="formGroupExampleInput">Nombre </label>
          <%= f.text_field:nombrecarrera, placeholder:"Agregar Nombre" , class:"form-control"  %>
          
        </div>
      
        <div class="form-group">
        <label for="formGroupExampleInput">Codigo </label>
        <%= f.text_field:codigo, placeholder:"Agregar Codigo" , class:"form-control"  %>
         
        </div>
      
        <div class="form-group">
        <label for="formGroupExampleInput">Facultad </label>
        <div class="dropdown">
        <%= f.collection_select :facultad_id, Facultad.all, :id, :nombrefacultad, {:include_blank => "Seleccionar Facultad"},{class: "btn btn-outline-info "}  %>
        </div>
      
        </div>
         <%= f.submit "Guardar" ,class:"btn btn-info" %> 
       
        <%end%>
      
       


      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-dismiss="modal">Salir</button>

      </div>
    </div>
  </div>
</div>




