<%= form_for(@carrera, :html => {:role => 'form'}) do |f| %>
    <% if @carrera.errors.any? %>
    <div class="alert alert-info">
      <%= pluralize(@carrera.errors.count, "Errores") %>
    </div>
    <div class="alert alert-danger">
      <% @facultad.errors.full_messages.each do |error| %>
        <%= error %><br>
      <% end %>
    </div>
      <% end %>
  
  <div class="form">
    <h1 class="text-center"> Actualizacion de Carrera</h1>
  
    <div class="row">
  
    <div class="col">
    <div class="field">
      <%= f.label :nombrecarrera %><br/>
      <%= f.text_field :nombrecarrera, autofocus: true, class: "form-control", placeholder: "Nombre" %>
    </div><br>
  </div>
  <div class="col">
  <div class="field">
    <%= f.label :Codigo %><br/>
    <%= f.text_field :codigo, autofocus: true, class: "form-control", placeholder: "Codigo" %>
  </div><br>
</div>
  
  <div class="col">
  
   <div class="field">
      <%= f.label "Estado" %> <br />
      <%= f.check_box :estado %> <br />
  </div>
  </div>
  
   </div>
    <div class="actions">
      <%= f.submit "Guardar carrera" ,class:"btn btn-success"%>
    </div>
  <% end %>
  </div>