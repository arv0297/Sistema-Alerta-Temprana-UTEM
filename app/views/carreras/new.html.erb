<h1> Crear carrera</h1>


<%=form_for(@carreras) do |f| %>

  <div class="form-group">
    <label for="formGroupExampleInput">Nombre </label>
    <%= f.text_field:nombrecarrera, placeholder:"Agregar Nombre" , class:"form-control"  %>
    
  </div>

  <div class="form-group">
  <label for="formGroupExampleInput">Codigo </label>
  <%= f.text_field:codigo, placeholder:"Agregar Notas" , class:"form-control"  %>
   
  </div>
 
  
  <%= collection_select(:facultad, :id, Facultad.all, :id, :nombrefacultad) %>



   <%= f.submit "Guardar" ,class:"btn btn-primary" %> 
 
  <%end%>

 