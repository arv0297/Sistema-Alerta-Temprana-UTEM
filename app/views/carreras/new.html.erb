<h1> Crear carrera</h1>


<%=form_for(@carrera, :html => {:role => 'form'}) do |f| %>

  <div class="form-group">
    <label for="formGroupExampleInput">Nombre </label>
    <%= f.text_field :nombrecarrera, placeholder:"Agregar Nombre" , class:"form-control"  %>
    
  </div>

  <div class="form-group">
  <label for="formGroupExampleInput">Codigo </label>
  <%= f.text_field :codigo, placeholder:"Agregar Notas" , class:"form-control"  %>
   
  </div>

  <div class="form-group">
  <label for="formGroupExampleInput">Facultad </label>
  <div class="dropdown">
  <%= f.collection_select :facultad_id, Facultad.all, :id, :nombrefacultad, {:include_blank => "Seleccionar Facultad"},{class: "btn btn-secundary btn-sm"}  %>
  </div>

  </div>
   <%= f.submit "Guardar" ,class:"btn btn-primary" %> 
 
  <%end%>

 